




<!doctype html>
<html>
<head>
<meta charset="utf-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

<title>SinatraRecipes</title>

<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<link rel="stylesheet" href="/stylesheets/main.css" />
</head>
<body>
<div class="wrapper">
  <% if Helpers.logged_in?(session) %>
    <p class="links"><a href="/logout" class="logout">Log Out</a></p>
    <p class="links"><a href="/users/<%=Helpers.current_user(session).id if Helpers.logged_in?(session)%>">My Dogs</a></p>
    <p class="links"><a href="/dogs/new">Get A New Dog</a></p>
    <p class="links"><a href="/dogs">View All Dogs</a></p>
    <p class="links"><a href="/users">View All Users</a></p>
  <%end%>
    <%= yield %>
</div>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>

<style>
.links { float: right;
          display: inline;
           padding-left: 0;
           margin-right: 4px;
        }
a {
  color: blue;
  
}
body {
     background-color: white;
     background-image:url('https://www.kreature.co.uk/wp-content/uploads/2011/06/dewhursts-2.jpg');
     background-repeat: no-repeat;
  background-attachment: fixed;
  background-position: center;
  background-size: cover;
   }
   footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 300px;
}  

</style>
<footer class="branding">
        <small>&copy; 2020 <strong>Pledge Davis</strong></small>
      </footer>
</head>
</body>
</html>

